<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="7dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_has_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <org.jing1578.basicapplication.swipeloadmorelayout.CircleProgressBar
            android:id="@+id/pb_footer_load"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            app:mlpb_enable_circle_background="true"
            app:mlpb_progress_color="#ffff4444"
            app:mlpb_progress_stoke_width="3dp"
            app:mlpb_show_arrow="false" />

        <TextView
            android:id="@+id/tv_footer_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="#b4b4b4"
            android:textSize="12dp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>